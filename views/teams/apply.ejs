<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<% if (society.recruitmentOpen) { %>
        <form action="/recruitments/<%= society._id %>/<%= team._id %>/apply" method="POST">
            <div>
                <label for="name">Name</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" readonly>
            </div>
            <div>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" readonly>
            </div>
            <div>
                <label for="contact">Contact No.</label>
                <input type="text" id="contact" name="contact" value="<%= user.contact %>" readonly>
            </div>
            <div>
                <label for="branch">Branch</label>
                <input type="text" id="branch" name="branch" value="<%= user.branch %>" readonly>
            </div>
            <div>
                <label for="year">Year</label>
                <input type="text" id="year" name="year" value="<%= user.year %>" readonly>
            </div>
            <div>
                <label for="workLink">Link to Work</label>
                <input type="url" id="workLink" name="workLink" required>
            </div>
            <button type="submit">Apply</button>
        </form>
    <% } else { %>
        <p>Applications are currently closed.</p>
    <% } %>

<%- include('../partials/footer') %>
