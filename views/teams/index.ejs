<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<style>
    body {
        padding-top: 60px;
    }
    .society-card img {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
        margin: 0 auto;
    }
    .society-card .card-body {
        padding-top: 1rem;
    }
    .society-card .card-title {
        font-weight: bold;
        margin-top: 1rem;
    }
    .society-card .btn {
        margin: 0.2rem 0;
    }
    .slider {
        width: 50px;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <h2 class="text-center">Society Recruitment</h2>
        <% for (let society of societies) { %>
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4 society-card">
                <div class="card text-center shadow h-100">
                    <div class="card-body">
                        <img class="card-img-top img-fluid" src="<%= society.img %>" alt="<%= society.name %>">
                        <h4 class="card-title"><%= society.name %></h4>
                        <% if (currentUser && currentUser.role === 'student') { %>
                            <a href="/recruitments/<%= society._id %>" class="btn btn-primary apply-btn" <% if (!society.recruitmentOpen) { %> disabled <% } %>>Apply Now</a>
                        <% } else if (currentUser && currentUser.role === 'admin') { %>
                            <div>
                                <a href="/recruitments/<%= society._id %>" class="btn btn-info">View Teams</a>
                                <a href="/societies/<%= society._id %>/data" class="btn btn-secondary">Show Data</a>
                                <label class="form-check-label" for="recruitment-toggle-<%= society._id %>">Recruitment Open</label>
                                <input type="checkbox" class="form-check-input slider" id="recruitment-toggle-<%= society._id %>" <% if (society.recruitmentOpen) { %> checked <% } %> onchange="toggleRecruitment('<%= society._id %>')">
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script>
    function toggleRecruitment(societyId) {
        const checkbox = document.getElementById(`recruitment-toggle-${societyId}`);
        const applyButton = document.querySelector(`#apply-btn-${societyId}`);

        if (applyButton) {
            applyButton.disabled = !checkbox.checked;
        }

        const formData = new FormData();
        formData.append('recruitmentOpen', checkbox.checked ? 'on' : 'off');

        fetch(`/societies/${societyId}/toggleRecruitment`, {
            method: 'POST',
            body: formData
        })
        .then(response => response.text())
        .then(data => {
            // Check if the response contains error text
            if (data.includes('Error updating recruitment status')) {
                checkbox.checked = !checkbox.checked; // revert the toggle if there was an error
                if (applyButton) applyButton.disabled = !checkbox.checked;
                alert('Error updating recruitment status.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            checkbox.checked = !checkbox.checked; // revert the toggle if there was an error
            if (applyButton) applyButton.disabled = !checkbox.checked;
            alert('Error updating recruitment status.');
        });
    }
</script>


<script src="/js/common.js"></script>
<%- include('../partials/footer') %>
